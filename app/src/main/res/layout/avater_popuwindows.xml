<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popu_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3f000000">

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popu_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popu_selector_cancel"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/popupCamera"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp" />

        <View
            android:id="@+id/popu_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/popu_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/popu_selector_cancel"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/popupAlbum"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/popu_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/popu_selector_cancel"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/popupCancel"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="20sp" />
    </LinearLayout>
</RelativeLayout>
