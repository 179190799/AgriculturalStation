<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:background="#2212E0FF"
                android:padding="15dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/mine_go_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/MineFragGoLogin"
                        android:textColor="@color/colorGreenDark"
                        android:visibility="gone" />
                </FrameLayout>

                <com.rifeng.agriculturalstation.view.CircleImageView
                    android:id="@+id/mine_avatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/user_avatar"
                    app:civ_border_color="@color/colorGreenDark"
                    app:civ_border_width="1dp" />

                <RelativeLayout
                    android:id="@+id/mine_username_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/mine_avatar">

                    <TextView
                        android:id="@+id/mine_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:text="用户名：墨明棋妙"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mine_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mine_username"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="136****1122"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/starts_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mine_username"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/mine_phone"
                        android:text="星级："
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/ll_account_starts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mine_username"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/starts_text"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                </RelativeLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/mine_personal_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_1"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragPersonalInfo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_release_task"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_2"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragReleaseTask" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_account_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_3"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragAccountInfo" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_identity_certification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_4"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragIdentity" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_income_spending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_5"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragPayment" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_password_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_6"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragPwdManage" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_my_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_7"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragMessage" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_reward_punish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_8"
                    android:drawablePadding="10dp"
                    android:drawableRight="@mipmap/ic_mine_right"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragRegime" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />

                <TextView
                    android:id="@+id/mine_safe_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_tv_selector"
                    android:drawableLeft="@mipmap/ic_mine_9"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="13dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="13dp"
                    android:text="@string/MineFragSafetyExit" />

                <View
                    android:id="@+id/safe_exit_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#44ff4444" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
