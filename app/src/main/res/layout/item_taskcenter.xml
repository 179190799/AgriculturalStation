<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/taskcenter_item_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="2"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/taskcenter_item_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:text="宏兴农场灌溉大药"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/taskcenter_item_crops"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="2"
                android:text="农场作物包括棉花、水稻面积大概与10亩.农场作物包括棉花、水稻面积大概与10亩"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/taskcenter_item_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="作业面积：1000亩"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/taskcenter_item_totalPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="项目款：￥120000"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="12sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/taskcenter_item_undertakeType"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="本地用户和6星用户可接"
                android:textColor="@color/colorGreenDark"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/taskcenter_item_endtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="竞标截止日期：2016-11-17"
                android:textColor="@android:color/holo_red_light"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:background="#838080" />-->
</LinearLayout>
