<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/forum_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forum_list_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="[置顶]"
            android:textColor="@color/colorGreenDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/forum_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="3.7"
            android:singleLine="true"
            android:text="武鸣解放农场的风格的风格地方刚打饭"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/forum_list_views"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1.5"
            android:text="浏览(1001)"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/forum_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/forum_ll"
        android:text="2016-10-31"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />
</RelativeLayout>
