<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mytask_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY" />

        <Button
            android:id="@+id/mytask_status"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/mine_btn_selector"
            android:text="竞标中"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/mytask_evaluation"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/input_shape"
            android:text="选标"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/mytask_join_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="已有0人参与投标" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mytask_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="宏兴农场打药、灌溉"
            android:textColor="@color/colorGreenDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mytask_crops"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="农作物包括棉花、水稻、玉米、花生"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mytask_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="作业面积：10亩"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mytask_limitedPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="竞标最高限价：1200元/亩"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mytask_totalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="总价：12000元"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mytask_schedule"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="预计工期：12天"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mytask_startWorkTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="开工时间：2016-06-06"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mytask_undertakeType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:singleLine="true"
            android:text="本地用户和6星用户可接"
            android:textColor="@color/colorGreenDark"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
