<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postdetails_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="武鸣解放农场有大片的香蕉地需要翻耕"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/postdetails_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布者：解放农场" />

                <TextView
                    android:id="@+id/postdetails_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="2016-11-14" />
            </LinearLayout>

            <TextView
                android:id="@+id/postdetails_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="司法所感受到个地方官是否撒飞洒根深蒂固傻瓜式干撒给啥地方噶啥方式司法所感受到个地方官是否撒飞洒根深蒂固傻瓜式干撒给啥地方噶啥方式司法所感受到个地方官是否撒飞洒根深蒂固傻瓜式干撒给啥地方噶啥方式司法所感受到个地方官是否撒飞洒根深蒂固傻瓜式干撒给啥地方噶啥方式" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/postDiscuss"
                android:textColor="@color/colorGreenDark" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="@string/postDiscuss" />

            <EditText
                android:id="@+id/postdetails_comments_et"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="10dp"
                android:background="@drawable/input_shape"
                android:gravity="top"
                android:padding="5dp"
                android:text="这可以很解放农场，希望大家能支援兄弟农场"
                android:textSize="14sp" />

            <Button
                android:id="@+id/postdetails_comments_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/mine_btn_selector"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/postDiscussBtn"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>












































