<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <TextView
        android:id="@+id/withdrawal_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="可提现金额：2016元"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/withdrawal_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="@string/withdrawalSum"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/withdrawal_price_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/withdrawal_price_unit"
            android:layout_toRightOf="@+id/withdrawal_price_tv"
            android:layout_weight="4"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLength="10"
            android:textColor="#FFA853" />

        <TextView
            android:id="@+id/withdrawal_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="90dp"
            android:text="元"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_belongbank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="@string/withdrawalToBackCard"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/withdrawal_bank_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/center"
            android:layout_toRightOf="@+id/tv_belongbank"
            android:layout_weight="4"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="#FFA853" />

        <TextView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:textSize="18sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_withdrawal_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:text="@string/withdrawalUserName"
            android:textSize="18sp" />

        <EditText
            android:singleLine="true"
            android:gravity="center"
            android:textColor="#FFA853"
            android:id="@+id/withdrawal_bank_card__userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/center1"
            android:layout_toRightOf="@+id/tv_withdrawal_userName"
            android:layout_weight="4"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/center1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dp"
            android:textSize="18sp" />

    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/withdrawalAccount"
        android:textSize="18sp" />

    <EditText
        android:singleLine="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/withdrawal_account"
        android:textColor="#FFA853"
        android:maxLines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/withdrawal_finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/mine_btn_selector"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="@string/withdrawalFinishBtn"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>
