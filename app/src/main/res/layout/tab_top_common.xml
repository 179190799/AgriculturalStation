<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/top_bg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@mipmap/home_top_bg" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_current_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="您当前的位置："
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/home_forum"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_forum"
                    android:gravity="center"
                    android:text="@string/forum"
                    android:textColor="@android:color/white" />

                <LinearLayout

                    android:layout_width="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:layout_weight="5"
                    android:background="@drawable/search_bg"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/ic_search"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/home_search"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        android:text="搜索"
                        android:textSize="15sp"
                        android:layout_height="match_parent" />

                </LinearLayout>


                <!--     <ImageView
                 android:id="@+id/home_search"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_marginBottom="5dp"
                 android:layout_marginTop="5dp"
                 android:layout_weight="5"
                 android:background="@drawable/search_bg"
                 android:paddingBottom="5dp"
                 android:paddingTop="5dp"
                 android:src="@mipmap/ic_search" />-->

                <TextView
                    android:id="@+id/home_relese"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_relese"
                    android:gravity="center"
                    android:text="@string/releaseDemand"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
